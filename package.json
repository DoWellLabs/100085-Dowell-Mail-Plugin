{
  "name": "dowell-email",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dotenv": "^0.1.3",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "preview": "npm-run-all --parallel sync wpstart tailwindwatch",
    "sync": "browser-sync start -p 'dowell-email.local' --files '**/*.php' 'build/*.js' 'build/*.css'",
    "build": "npm-run-all --sequential buildwp tailwindbuild",
    "buildwp": "wp-scripts build src/index.js src/components/EmailPlugin.js",
    "wpstart": "wp-scripts start src/index.js src/components/EmailPlugin.js",
    "start": "npm-run-all --parallel wpstart tailwindwatch",
    "tailwindbuild": "tailwindcss -i ./src/index.css -o ./build/index.css --postcss --minify",
    "tailwindwatch": "tailwindcss -i ./src/index.css -o ./build/index.css --watch --postcss --minify",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@babel/plugin-transform-react-jsx": "^7.22.3",
    "@babel/preset-react": "^7.22.3",
    "@wordpress/scripts": "^26.6.0",
    "tailwindcss": "^3.3.2",
    "webpack-cli": "^5.1.4",
    "autoprefixer": "^10.4.7",
    "browser-sync": "^2.27.10",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-nested": "^5.0.6"
  }
}
